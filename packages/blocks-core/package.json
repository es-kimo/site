{
  "name": "@workspace/blocks-core",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    },
    "./schema/*": {
      "types": "./dist/schema/*.d.ts",
      "import": "./dist/schema/*.js",
      "require": "./dist/schema/*.cjs"
    },
    "./schema/blocks/*": {
      "types": "./dist/schema/blocks/*.d.ts",
      "import": "./dist/schema/blocks/*.js",
      "require": "./dist/schema/blocks/*.cjs"
    }
  },
  "devDependencies": {
    "@types/node": "^22.13.8",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "typescript": "latest",
    "tsup": "^8.5.0",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "zod": "^3.23.8"
  }
}
